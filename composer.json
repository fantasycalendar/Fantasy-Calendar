{
    "name": "fantasycalendar/fantasy-calendar",
    "type": "project",
    "description": "The world's best tool for creating and tracking calendars in your fantasy world.",
    "keywords": [
        "fantasy",
        "calendar",
        "dnd",
        "dungeons",
        "dragons",
        "novel",
        "fiction",
        "calendaring",
        "worldbuilding"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "ext-gmp": "*",
        "ext-imagick": "*",
        "ext-json": "*",
        "ext-sodium": "*",
        "aws/aws-sdk-php": "^3.194",
        "barryvdh/laravel-ide-helper": "^2.10",
        "bref/extra-php-extensions": "^0.11",
        "bref/laravel-bridge": "^1.0",
        "code16/sharp": "^7.1",
        "guzzlehttp/guzzle": "^7.2",
        "intervention/image": "^2.7",
        "laravel/cashier": "^12.3.1",
        "laravel/framework": "^9.0",
        "laravel/sanctum": "^2.14",
        "laravel/socialite": "^5.2",
        "laravel/ui": "^3.0",
        "league/fractal": "^0.18.0",
        "marvinlabs/laravel-discord-logger": "^1.1",
        "mews/purifier": "3.3.7",
        "mustache/mustache": "^2.13",
        "nesbot/carbon": "^2.31",
        "restcord/restcord": "dev-develop",
        "socialiteproviders/discord": "^4.1",
        "spatie/laravel-export": "^0.3.10",
        "spatie/laravel-honeypot": "^4.1",
        "spatie/laravel-log-dumper": "^1.4"
    },
    "require-dev": {
        "laravel/tinker": "^2.7",
        "barryvdh/laravel-debugbar": "^3.2",
        "spatie/laravel-ignition": "^1.0",
        "laravel/dusk": "^6.4",
        "mockery/mockery": "^1.0",
        "fakerphp/faker": "^1.16",
        "nunomaduro/collision": "^6.1",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "pre-install-cmd": [
            "@php -r \"file_exists('storage') || mkdir('storage');\"",
            "@php -r \"file_exists('storage/framework') || mkdir('storage/framework');\"",
            "@php -r \"file_exists('storage/framework/cache') || mkdir('storage/framework/cache');\"",
            "@php -r \"file_exists('storage/framework/sessions') || mkdir('storage/framework/sessions');\"",
            "@php -r \"file_exists('storage/framework/views') || mkdir('storage/framework/views');\""
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan vendor:publish --provider='Code16\\Sharp\\SharpServiceProvider' --tag=assets --force",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
